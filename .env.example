TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_key

GOOGLE_SHEET_ID=your_spreadsheet_id
GOOGLE_CREDENTIALS_PATH=./credentials/google_service_account.json
GOOGLE_SHEET_NAME=Documents

AI_PROVIDER=openrouter
OPENAI_API_KEY=sk-or-v1-your-openrouter-key
OPENAI_MODEL=google/gemini-2.0-flash-exp:free

OCR_ENGINE=tesseract
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=rus+eng

MAX_FILE_SIZE_MB=20
MAX_TEXT_LENGTH=100000
MIN_TEXT_FOR_SUMMARY=100
SUMMARY_MIN_SENTENCES=3
SUMMARY_MAX_SENTENCES=7
KEYWORDS_MIN_COUNT=5
KEYWORDS_MAX_COUNT=10

MAX_RETRIES=3
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=30.0

LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/processing.log

WEBHOOK_URL=
WEBHOOK_TIMEOUT=30

ENABLE_OCR=true
ENABLE_URL_DOWNLOAD=true
ENABLE_LANGUAGE_DETECTION=true
